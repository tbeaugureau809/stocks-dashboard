{
  "name": "stocks-dashboard-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces",                       // keep it simple: open /workspaces
  "shutdownAction": "stopCompose",
  "overrideCommand": false,
  "postCreateCommand": "pip install -r /workspaces/requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
